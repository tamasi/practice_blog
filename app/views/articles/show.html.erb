<article class="blog-post">
    <header>
        <h1><%= @article.title %></h1>
        <div class="lead-image">
            <%= image_tag @article.cover.url, class: "img-responsive" %>
            <%# <img src="./Tales - My Insightful Article_files/hands-big.png" alt="Hands" class="img-responsive"> %>
            <div class="meta clearfix">
    
                <div class="author">
                    <i class="fa fa-user"></i>
                    <span class="data"><%= link_to @article.user.profile.full_name, @article.user.profile %></span>
                </div>
                <div class="date">
                    <i class="fa fa-calendar"></i>
                    <span class="data"><%= @article.created_at.to_date %></span>
                </div>
                <div class="comments">
                    <i class="fa fa-comments"></i>
                    <span class="data"><a href="http://demo.hackerthemes.com/tales/html-version/3.3.6-v3/blog-detail.html#comments"><%= @article.comments ? @article.comments.count : "0" %></a></span>
                </div>                                
            </div>
        </div>
    </header>
    <div class="body">
        <div class="iframecontent">
            <iframe src="https://docs.google.com/gview?url=https:<%= @article.artpdf.url %>&embedded=true" style="width:800px; height:900px;" frameborder="0"></iframe>
        </div>
    </div>
</article>