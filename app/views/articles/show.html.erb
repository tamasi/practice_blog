<div>
	<%= link_to "Editar", edit_article_path(@article) %>
</div>


<div class="col-xs-12 single-content">
    <p class="meta">
      <%= link_to @article.user.profile.full_name, @article.user.profile %> in <%= link_to @article.categories.first ? @article.categories.first.name : "Sin Categorias", @article.categories.first ? @article.categories.first : @article.user.profile %> <i class="link-spacer"></i> <i class="fa fa-bookmark"></i> <%= @article.reading_time %> minute read <i class="link-spacer"></i> leÃ­do <%= @article.visits_count %> veces
    </p>

    <h1><%= @article.title %></h1>

    <p class="subtitle">Like I said, never told...</p>

    <%= Sanitize.fragment(@article.body, Sanitize::Config::RELAXED).html_safe %>
</div><!-- main-content/col -->
<div class="col-xs-12 single-content">
	<h3>Comentarios</h3>
	<%= render "comments/form" %>
	<ul id="comments-box">
		<% @article.comments.each do |comment| %>
			<li>
				<%= comment.body %> - <%= comment.user.email %>
			</li>
		<%end%>
	</ul>
</div>