<div class="home-page-posts animated fadeIn ">
	<% @articles.each do |article| %>
    <article class="post">
	    <div class="post-preview col-xs-10  no-gutter">
	        <h2><%= link_to article.title, article %></h2>

	        <p><%= truncate(Sanitize.fragment(article.body, Sanitize::Config::RELAXED), :omission => "" , :escape => false, length:40) %></p>

	        <p class="meta">
	            <a href="http://adventurethemes.com/demo/writer/html/v2-1/author.html">James Reddy</a> in <%= link_to article.categories[0], article.categories[0] %><a href="http://adventurethemes.com/demo/writer/html/v2-1/category.html">Storytime</a> <i class="link-spacer"></i> <i class="fa fa-bookmark"></i> 23 minute read
	        </p>
	    </div>

	    <div class=" col-xs-2  no-gutter">
	        <img src="assets/fotoSlack.jpg" class="user-icon" alt="user-image">
	    </div>
		</article>
	<% end %>          
</div>
<%= will_paginate @articles %>