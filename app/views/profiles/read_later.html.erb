<div class="home-page-posts animated fadeIn ">
	<% @read_later.each do |to_read| %>
    <article class="post">
	    <div class="post-preview col-xs-10  no-gutter">
	      <h2><%= link_to to_read.article.title, to_read.article %></h2>
	      <p><%= to_read.article.subtitle %></p>
	      <p class="meta">
	        <%= to_read.article.user.profile.full_name %> in <%= to_read.article.categories.first ? to_read.article.categories.first.name : "Sin Categorias"  %> <i class="link-spacer"></i> <i class="fa fa-bookmark"></i> 23 minute read
	      </p>
	    </div>
	    <div class="col-xs-2  no-gutter">
	    	<% if to_read.article.user.avatar.exists? %>
	    		<%= image_tag(to_read.article.user.avatar, class: "user-icon") %>
	    	<% else %>
	    		<%= image_tag(to_read.article.user.gravatar, class: "user-icon") %>
	    	<% end %>
	    </div>
		</article>
	<% end %>
</div>